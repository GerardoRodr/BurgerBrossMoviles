<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Barra de navegacion -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Detalle del pedido"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <ImageButton
                android:contentDescription="Concluir pedido"
                android:id="@+id/btn_adelante_ingresar_pedido"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/adelante"
                android:backgroundTint="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
            </ImageButton>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/night">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luis"
                android:textSize="30sp"
                android:textStyle="italic"
                android:layout_marginStart="15dp"
                android:textColor="@color/silver"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDetallePedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="4"
                tools:listitem="@layout/item_detalle_pedido"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>